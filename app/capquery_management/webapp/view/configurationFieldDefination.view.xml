<mvc:View
    controllerName="capquerymanagement.controller.configurationFieldDefination"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
>
<tnt:ToolHeader
        id="cgcConfig_mainToolheaded"
        class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop"
    >
        <ToolbarSpacer
            id="cgcConfig_mainToolbarSpacer"
            width="15px"
        />
        <Title
            id="cgcConfig_Title_FieldDefinition"
            text="Customer Master Field Definition"
            wrapping="true"
            level="H3"
        />
        <ToolbarSpacer id="cgcConfig_ToolbarSpacer" />
        <Button
            id="cgcConfig_Button_Create"
            text="Create"
            width="100px"
            press="onAddDynamic"
            type="Emphasized"
        />
        <Button
            id="cgcConfig_Button_DeleteField"
            text="Delete"
            width="100px"
            press="onDeleteDynamic"
            type="Emphasized"
        />
        <Button
            id="cgcConfig_Button_ConfirmDeletion"
            text="Confirm"
            width="100px"
            press="onConfirmFieldDeletion"
            type="Emphasized"
            visible="false"
        />
        <Button
            id="cgcConfig_Button_CancelDeletion"
            text="Cancel"
            width="100px"
            press="onCancelFieldDeletion"
            type="Emphasized"
            visible="false"
        />
    </tnt:ToolHeader>

<!-- Contract and Document Type Selection -->
     <l:VerticalLayout
        id="cgcConfig_hVerticalLayout"
        width="100%"
    >
        <l:BlockLayout
            id="cgcConfig_BlochkLayout"
            background="Dashboard"
        >
            <l:BlockLayoutRow id="cgcConfig_BlockLayoutRow">
                <l:BlockLayoutCell
                    id="cgcConfig_BlockLahyoutCell"
                    width="90%"
                >
                    <HBox
                        id="cgcConfig_HBox_Main"
                        class="sapUiSmallMarginTop"
                    >
                        <HBox
                            id="cgcConfig_HBox_ContractType"
                            class="sapUiSmallMarginBottom sapUiSmallMarginEnd"
                        >
                            <Label
                                id="cgcConfig_Label_ContractType"
                                text="Contract Type :"
                                class="configTypeLabel"
                            />
                            <Input
                                id="cgcConfig_Select_ContractType"
                                editable="false"
                                class="sapUiSmallMarginBegin"
                                value="Sales Contract"
                                
                           />
                                
                        </HBox>
                        <HBox
                            id="cgcConfig_HBox_DocumentType"
                            class="sapUiSmallMarginBottom sapUiSmallMarginEnd"
                        >
                            <Label
                                id="cgcConfig_Label_DocumentType"
                                text="Document Type :"
                                class="sapUiLargeMarginBegin"
                            />
                            <Select
                                id="cgcConfig_Select_DocumentType"
                                forceSelection="false"
                                items="{docHITypes>/}"
                                change="onDocumentTypeSelect"
                                class="sapUiSmallMarginBegin"
                            >
                                <core:Item
                                    id="cgcConfig_Item_Document"
                                    key="{docHITypes>DocumentNo}"
                                    text="{docHITypes>DocumentNo}"
                                />
                            </Select>
                        </HBox>
                    </HBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
        </l:BlockLayout>
    </l:VerticalLayout>


        <!-- Main Page -->
    <Page
        id="cgcConfig_Page"
        showHeader="false"
    >
        <l:VerticalLayout
            id="cgcConfig_VerticalLayout"
            width="100%"
        >
            <l:BlockLayout
                id="cgcConfig_wBlockLayout"
                background="Dashboard"
            >
                <l:BlockLayoutRow id="cgcConfig_mainBlockLayoutRow">
                    <l:BlockLayoutCell
                        id="cgcConfig_BlockLayowutCell"
                        width="90%"
                    >
                        <ScrollContainer
                            id="cgcConfig_scrollcont"
                            width="100%"
                            height="calc(60vh - 110px)"
                            horizontal="false"
                            vertical="true"
                        >
                            <content>
                                <!-- Static Table -->
                                <Table
                                    items="{staticModel>/}"
                                    id="cgcConfig_StaticTable"
                                    visible="false"
                                    growing="true"
                                >
                                    <infoToolbar>
                                        <OverflowToolbar
                                            id="cgcConfig_StaticTable_Toolbar"
                                            height="50px"
                                        >
                                            <content>
                                                <Title
                                                    id="cgcConfig_StaticTable_Title"
                                                    text="Static Fields"
                                                />
                                            </content>
                                        </OverflowToolbar>
                                    </infoToolbar>
                                    <items>
                                        <ColumnListItem
                                            type="Active"
                                            id="cgcConfig_StaticItem"
                                        >
                                            <cells>
                                                <Text
                                                    id="cgcConfig_StaticCell_ID"
                                                    text="{staticModel>ID}"  />
                                                <Text
                                                    id="cgcConfig_StaticCell_ServiceParameter"
                                                    text="{staticModel>service_parameter}"
                                                />
                                                <Input
                                                    id="cgcConfig_StaticCell_Label"
                                                    value="{staticModel>label}"
                                                    liveChange="onStaticLabelUpdate"
                                                    width="250px"
                                                />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                    <columns>
                                        <Column id="cgcConfig_StaticColumn_ID">
                                            <header>
                                                <Label
                                                    id="cgcConfig_StaticColumn_Label_ID"
                                                    text="ID"
                                                />
                                            </header>
                                        </Column>
                                        <Column
                                            id="cgcConfig_StaticColumn_ServiceParameter"
                                        >
                                            <header>
                                                <Label
                                                    id="cgcConfig_StaticColumn_Label_ServiceParameter"
                                                    text="Service Parameter"
                                                />
                                            </header>
                                        </Column>
                                        <Column
                                            id="cgcConfig_StaticColumn_Label"
                                        >
                                            <header>
                                                <Label
                                                    id="cgcConfig_StaticColumn_Label_Label"
                                                    text="Label"
                                                />
                                            </header>
                                        </Column>
                                    </columns>
                                    <noData>
                                        <IllustratedMessage
                                            id="cgcConfig_StaticTable_NoData"
                                            enableVerticalResponsiveness="true"
                                            title="No Data Found"
                                            description="There are no items in this Table"
                                        />
                                    </noData>
                                </Table>

                                <!-- Dynamic Table -->
                                <VBox
                                    id="cgcConfig_DynamicTable_VBox"
                                    class="vboxmargin"
                                >
                                    <Table
                                        items="{dynamicModel>/}"
                                        id="cgcConfig_DynamicTable"
                                        visible="false"
                                        growing="true"
                                    >
                                        <infoToolbar>
                                            <OverflowToolbar
                                                id="cgcConfig_DynamicTable_Toolbar"
                                                height="50px"
                                            >
                                                <content>
                                                    <Title
                                                        id="cgcConfig_DynamicTable_Title"
                                                        text="Dynamic Fields"
                                                    />
                                                </content>
                                            </OverflowToolbar>
                                        </infoToolbar>
                                        <items>
                                            <ColumnListItem
                                                type="Active"
                                                id="cgcConfig_DynamicItem"
                                            >
                                                <cells>
                                                    <CheckBox
                                                        id="cgcConfig_DynamicCheckbox_Delete"
                                                        select="onDeleteDynamicFieldArray"
                                                        enabled="{path: 'dataModel>flag', formatter: '.checkMandatory'}"
                                                    />
                                                    <Text
                                                        id="cgcConfig_DynamicCell_ID"
                                                        text="{dynamicModel>ID}"
                                                        visible="true"
                                                    />
                                                    <Text
                                                        id="cgcConfig_DynamicCell_ServiceParameter"
                                                        text="{dynamicModel>service_parameter}"
                                                    />
                                                    <Input
                                                        id="cgcConfig_DynamicCell_Label"
                                                        value="{dynamicModel>label}"
                                                        liveChange="onDynamicLabelUpdate"
                                                    />
                                                    <CheckBox
                                                        id="cgcConfig_DynamicCheckbox_Mandatory"
                                                        selected="{dynamicModel>mandatory}"
                                                        enabled="{path: 'dynamicModel>flag', formatter: '.checkMandatory'}"
                                                        select="onMandatoryCheckboxChange"
                                                    />
                                                    <CheckBox
                                                        id="cgcConfig_DynamicCheckbox_Visible"
                                                        selected="{dynamicModel>visible}"
                                                        enabled="{path: 'dynamicModel>flag', formatter: '.checkMandatory'}"
                                                        select="onVisibleCheckboxChange"
                                                    />
                                                    
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                        <columns>
                                            <Column
                                                id="cgcConfig_DynamicColumn_Delete"
                                                width="4rem"
                                                visible="false"
                                            >
                                                <header>
                                                    <CheckBox
                                                        id="cgcConfig_DynamicColumn_Checkbox_SelectAll"
                                                        select="onSelectAllDynamicField"
                                                    />
                                                </header>
                                            </Column>
                                            <Column
                                                id="cgcConfig_DynamicColumn_ID"
                                                visible="true"
                                            >
                                                <header>
                                                    <Label
                                                        id="cgcConfig_DynamicColumn_Label_ID"
                                                        text="ID"
                                                    />
                                                </header>
                                            </Column>
                                            <Column
                                                id="cgcConfig_DynamicColumn_ServiceParameter"
                                            >
                                                <header>
                                                    <Label
                                                        id="cgcConfig_DynamicColumn_Label_ServiceParameter"
                                                        text="Service Parameter"
                                                    />
                                                </header>
                                            </Column>
                                            <Column
                                                id="cgcConfig_DynamicColumn_Label"
                                            >
                                                <header>
                                                    <Label
                                                        id="cgcConfig_DynamicColumn_Label_Label"
                                                        text="Label"
                                                    />
                                                </header>
                                            </Column>
                                            <Column
                                                id="cgcConfig_DynamicColumn_Mandatory"
                                            >
                                                <header>
                                                    <Label
                                                        id="cgcConfig_DynamicColumn_Label_Mandatory"
                                                        text="Mandatory"
                                                    />
                                                </header>
                                            </Column>
                                            <Column
                                                id="cgcConfig_DynamicColumn_Display"
                                            >
                                                <header>
                                                    <Label
                                                        id="cgcConfig_DynamicColumn_Label_Display"
                                                        text="Display"
                                                    />
                                                </header>
                                            </Column>
                                           
                                        </columns>
                                        <noData>
                                            <IllustratedMessage
                                                id="cgcConfig_DynamicTable_NoData"
                                                enableVerticalResponsiveness="true"
                                                title="No Data Found"
                                                description="There are no items in this Table"
                                            />
                                        </noData>
                                    </Table>
                                </VBox>
                            </content>
                        </ScrollContainer>
                    </l:BlockLayoutCell>
                </l:BlockLayoutRow>
            </l:BlockLayout>
        </l:VerticalLayout>
    </Page>

</mvc:View>
